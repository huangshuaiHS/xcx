
.nav{
  background: #fff;
  padding:0 10px;
}
.list{
  display: flex;
  font-size: 16px;
  color: #9A9A9A;
}
.list .item {
  flex: 1;
  text-align: center;
  padding: 15px 0 5px 0;
  margin:0 10px 10px 10px;
  border-bottom: 2px solid #fff;
}
.list .action {
  border-bottom: 2px solid #F5B223;
  color:#F5B223;
}

.swiper {
  height: 90%;
}

swiper-item{
  overflow-y: scroll;
}

swiper-item image{
  width:100%;
  height: 400rpx;
}
.listMall{
  display:-webkit-flex;
	display:flex;
	width:100%;
  flex-wrap:wrap; 
}
.listMall view{
    width: 230rpx; 
    margin-top: 10rpx;
    margin-left: 12rpx;
}
.listMall .img{
  text-align:center;
}
.listMall view image{
    width: 230rpx;
    height: 230rpx;
}
.listMall .name{
  font-size: 25rpx;
  height: 44px;
  color: #9A9A9A;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 22px;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.listMall .now_price{
  color:#F98809;
  font-size: 30rpx;
}


.swiper-tab {
  background: #fff;
  padding:0 10px;
  width: 100%;
  text-align: center;
  line-height: 45px;
}

.swiper-tab-list {  
font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777777;
}

.on { 
color: #F5B223;
  border-bottom: 2px solid #F5B223;
}

.swiper-box { 
display: block; 
width: 100%; 
overflow: hidden; 
}



    





.ui-flex{
  display: flex;
  /* border-bottom: 2px solid #F5B223; */
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
  box-shadow: inset 0px 0px 5px 5px #F5B223;

}

.nav-img {
  width: 110rpx;
  height: 114rpx;
}
.nav-text{
  padding-top: 20rpx;
  font-size: 30rpx;
}
.category-title{
  padding-top: 15rpx;
  padding-left: 20rpx;
  padding-bottom: 15rpx;
  display: flex;
  align-items: center;
}
.small-icon-img{
  width: 45rpx;
  height:45rpx;
  margin-right: 15rpx;
}
.small-text{
  font-size: 30rpx;
   font-weight: 900;
}
.ui-width-100{
  width: 100%;
}
.separate {
  height: 18rpx;
  background-color: #f2f2f2;
}